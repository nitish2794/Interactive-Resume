<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>_mywebsite</servlet-name>
		<servlet-class>com.example.mywebsite._mywebsiteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>_mywebsite</servlet-name>
		<url-pattern>/_mywebsite</url-pattern>
	</servlet-mapping>
	<servlet>
     <servlet-name>SendEmail</servlet-name>
     <servlet-class>com.example.mywebsite.SendEmail</servlet-class>
 </servlet>
 
 <servlet-mapping>
     <servlet-name>SendEmail</servlet-name>
     <url-pattern>/sendmail</url-pattern>
 </servlet-mapping>
	<welcome-file-list>
		<welcome-file>first.html</welcome-file>
	</welcome-file-list>
</web-app>
